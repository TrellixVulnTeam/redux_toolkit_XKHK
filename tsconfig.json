{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "hooks/*": ["src/hooks/*"],
      "store/*": ["src/store/*"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"],
}